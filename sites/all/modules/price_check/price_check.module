function price_check_count_images($form_state) {
  //count ebay pictures
  $image_count = @$form_state['input']['image_count'];
  $images = $image_count;
  //print_r($form_state['input']); exit(0);
  if($images) {
    for($i=0; $i<$images; $i++) {
      if(@$form_state['input']['image_checkbox' . $i] == 1) {
        $image_count--;
      }
    }
  }
  //count dsgenie pictures
