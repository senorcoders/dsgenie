      "<p>" . $error['LongMessage'] . "</p>";
    $error_parms = price_check_force_json_array(@$error['ErrorParameters']);  
    foreach($error_parms as $error_parm) {
      $output_line .= "<div>" . $error_parm['Value'] . "</div>";
    }
    $output[] = $output_line;
  }
  return implode('', $output) . "<!-- " . print_r($error_xml, true) . " -->"; 
}

